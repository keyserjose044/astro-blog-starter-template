---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

// Exclude drafts and sort safely
const posts = (await getCollection('blog', ({ data }) => data?.draft !== true))
  .map((p) => ({
    ...p,
    _pub: p.data?.pubDate instanceof Date
      ? p.data.pubDate
      : new Date(p.data?.pubDate ?? 0),
  }))
  .sort((a, b) => (b._pub?.valueOf?.() ?? 0) - (a._pub?.valueOf?.() ?? 0));
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} â€” Blog`} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
        max-width: 100%;
        margin-inline: auto;
        padding: 2rem 1rem;
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      ul li {
        width: calc(50% - 1rem);
      }

      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }

      /* First (featured) post full-width */
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }

      /* Default (landscape) thumbnail: keep original look, no cropping */
      .thumb {
        display: block;
        width: 100%;
        height: auto;
        border-radius: 12px;
        margin-inline: 0;
      }

      /* Portrait opt-in: center it, don't crop, respect inline style if provided */
      .thumb.portrait {
        width: auto;           /* allow natural portrait width */
        max-width: 100%;
        height: auto;
        margin-inline: auto;   /* center inside card */
        object-fit: contain;   /* no cropping */
      }

      /* Keep the featured (first) image controlled but uncropped */
      ul li:first-child .thumb {
        width: 100%;
        height: auto;
        max-height: 600px;     /* safety cap for very tall portraits */
        object-fit: contain;   /* don't crop the hero */
      }

      ul li a {
        display: block;
      }

      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1.1;
      }

      .date {
        margin: 0;
        color: rgb(var(--gray));
      }

      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }

      ul a:hover img {
        box-shadow: var(--box-shadow);
      }

      /* Responsive layout for mobile */
      @media (max-width: 720px) {
        ul { gap: 0.5em; }
        ul li { width: 100%; text-align: center; }
        ul li:first-child { margin-bottom: 0; }
        ul li:first-child .title { font-size: 1.563em; }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {posts.map((post) => {
            // If the post supplies a heroImageStyle (your portrait posts do),
            // we treat it as a portrait and apply that style in the listing too.
            const isPortrait = Boolean(post.data?.heroImageStyle);
            return (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  {post.data.heroImage && (
                    <img
                      class={`thumb ${isPortrait ? 'portrait' : ''}`}
                      src={post.data.heroImage}
                      alt=""
                      loading="lazy"
                      style={isPortrait ? post.data.heroImageStyle : undefined}
                    />
                  )}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post._pub} />
                  </p>
                </a>
              </li>
            );
          })}
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
