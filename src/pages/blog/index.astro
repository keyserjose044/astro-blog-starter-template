---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import VideoBg from '../../components/VideoBg.astro';
import BlogCard from '../../components/BlogCard.astro';

// Exclude drafts and sort safely
const posts = (await getCollection('blog', ({ data }) => data?.draft !== true))
  .map((p) => ({
    ...p,
    _pub: p.data?.pubDate instanceof Date
      ? p.data.pubDate
      : new Date(p.data?.pubDate ?? 0),
  }))
  .sort((a, b) => (b._pub?.getTime?.() ?? 0) - (a._pub?.getTime?.() ?? 0));
---

<!doctype html>
<html lang="en" data-blog-layout="cards">
  <head>
    <BaseHead title={`${SITE_TITLE} â€” Blog`} description={SITE_DESCRIPTION} />
    <style>
      :root {
        --list-max: clamp(60ch, 90vw, 1100px); /* same as old file */
        --border: #e6e9ef;
      }

      html,
      body {
        max-width: 100%;
        overflow-x: hidden;
      }

      main {
        width: 100%;
        margin: 0;
      }

      .wrap {
        width: 100%;
        max-width: var(--list-max);
        margin: 0 auto 2.5rem;
        padding: 1rem 1.25rem 2.5rem;
        box-sizing: border-box;
      }

      @media (max-width: 480px) {
        .wrap {
          padding-inline: 1rem;
        }
      }

      .intro {
        text-align: center;
        margin-bottom: 2rem;
      }
      
      .intro h1 {
        font-size: clamp(2.3rem, 3vw, 2.8rem);
        font-weight: 700;
        margin-bottom: 1.2rem;
      }
      
      /* Center the search bar container */
      .toolbar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
      }
      
      /* LL classic search bar */
      .toolbar input[type='search'] {
        width: 100%;
        max-width: 420px;
        padding: 12px 16px;
      
        border-radius: 16px;
        border: 1px solid var(--border);
      
        background: #ffffff;
        color: #111111;
      
        font-size: 1rem;
        line-height: 1.4;
      
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
        transition:
          border-color 0.2s ease,
          box-shadow 0.2s ease;
      }
      
      .toolbar input[type='search']::placeholder {
        color: #9ca3af;
      }
      
      .toolbar input[type='search']:focus {
        outline: none;
        border-color: #38bdf8;
        box-shadow:
          0 0 0 1px rgba(56, 189, 248, 0.7),
          0 0 18px rgba(56, 189, 248, 0.25);
      }
      
      /* Remove leftover spacing for the small tag if it exists */
      .toolbar small {
        display: none;
      }


      /* ====== GRID LAYOUT (same behavior as old "cards" view) ====== */

      ul#grid {
        list-style: none;
        padding: 0;
        margin: 1.75rem 0 0;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
      }

      /* Desktop: auto-fill 3-ish cards per row using more of the screen */
      @media (min-width: 900px) {
        html[data-blog-layout='cards'] ul#grid {
          display: grid;
          grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
          gap: 1.5rem;
        }
      }
    </style>
  </head>

  <body>
    <VideoBg>
      <Header />
      <main>
        <section class="wrap">
          <div class="intro" role="region" aria-label="Blog header">
            <h1>Blog Posts</h1>

            <div class="toolbar">
              <input
                id="q"
                type="search"
                placeholder="Search"
                aria-label="Filter blog posts"
              />
            </div>
          </div>

          <div class="empty" id="empty">No posts match your search.</div>
          
          <ul id="grid">
            {posts.map((post, i) => {
              const title = post.data.title ?? '';
              const heroImage = post.data.heroImage;
              const heroVideo = (post.data as any).heroVideo;
          
              return (
                <BlogCard
                  href={`/blog/${post.slug}/`}
                  title={title}
                  pubDate={post._pub}
                  heroImage={heroImage}
                  heroVideo={heroVideo}
                  data-title={title.toLowerCase()}
                  {...(i === 0 ? { 'data-lcp': true } : {})}
                />
              );
            })}
          </ul>
        </section>
      </main>
      <Footer />
    </VideoBg>

    <script>
      (function () {
        const $ = (s, r = document) => r.querySelector(s);
        const $$ = (s, r = document) => Array.from(r.querySelectorAll(s));
        const norm = (s) =>
          (s || '')
            .toLowerCase()
            .normalize('NFD')
            .replace(/[\u0300-\u036f]/g, '');
        const debounce = (fn, ms) => {
          let t;
          return (...a) => {
            clearTimeout(t);
            t = setTimeout(() => fn(...a), ms);
          };
        };

        const input = $('#q');
        const empty = $('#empty');
        const items = $$('#grid [data-title]');

        function applyFilter() {
          if (!items.length || !input) return;

          const query = norm(input.value);
          let visibleCount = 0;

          items.forEach((el) => {
            const title = norm(el.getAttribute('data-title') || '');
            const matches = !query || title.includes(query);
            const li = el.closest('li') || el;

            if (matches) {
              li.style.display = '';
              visibleCount += 1;
            } else {
              li.style.display = 'none';
            }
          });

          if (empty) {
            empty.style.display = visibleCount ? 'none' : 'block';
          }
        }

        if (input) {
          input.addEventListener('input', debounce(applyFilter, 80));
          window.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
              input.value = '';
              applyFilter();
              input.focus();
            } else if (e.key === '/' && e.target === document.body) {
              e.preventDefault();
              input.focus();
            }
          });
        }

        applyFilter();
      })();
    </script>
  </body>
</html>
