// src/components/HorzTimeline.astro

export interface TimelineItem {
  /** e.g. "jan" */
  id?: string;
  /** e.g. "JAN" */
  label: string;
  /** e.g. "GS Expansion" */
  title?: string;
  /** e.g. "Google Sheets systems" */
  tag?: string;
  /** Optional small phase/secondary line inside the panel */
  phase?: string;
  /** Main paragraph text */
  description?: string;
  /** Bullet points */
  bullets?: string[];
}

export interface Phase {
  /** e.g. "GS Systems" */
  label: string;
  /** e.g. "jan" */
  startId: string;
  /** e.g. "apr" */
  endId: string;
  /** Optional subtitle like "Jan â€“ Apr" */
  subtitle?: string;
}

export interface Props {
  year?: number | string;
  heading?: string;
  subheading?: string;
  items: TimelineItem[];
  /** Optional bands that group months into eras */
  phases?: Phase[];
}

const {
  year,
  heading = '',
  subheading = '',
  items = [],
  phases = [],
} = Astro.props as Props;

// Normalize items and guarantee a stable internal id
const safeItems = items.map((item, index) => ({
  ...item,
  _id: item.id ?? item.label.toLowerCase() ?? `item-${index}`,
}));

// Build phase bands that span the underlying 12-column grid
const normalize = (v: string | undefined | null) =>
  (v ?? '').toString().toLowerCase().trim();

const phaseBands =
  phases
    ?.map((phase) => {
      const startKey = normalize(phase.startId);
      const endKey = normalize(phase.endId);

      const startIndex = safeItems.findIndex((i) => {
        const idCandidates = [
          normalize(i._id),
          normalize(i.id),
          normalize(i.label),
        ];
        return idCandidates.includes(startKey);
      });

      const endIndex = safeItems.findIndex((i) => {
        const idCandidates = [
          normalize(i._id),
          normalize(i.id),
          normalize(i.label),
        ];
        return idCandidates.includes(endKey);
      });

      if (startIndex === -1 || endIndex === -1 || endIndex < startIndex) {
        return null;
      }

      return {
        ...phase,
        startCol: startIndex + 1,
        endCol: endIndex + 2, // end is exclusive in CSS grid
        anchorId: safeItems[startIndex]._id,
      };
    })
    .filter(Boolean) ?? [];
---

<section class="horz-timeline">
  <div class="horz-timeline__inner">
    {(heading || year || subheading) && (
      <header class="horz-timeline__header">
        {heading && (
          <p class="horz-timeline__eyebrow">
            {heading}
          </p>
        )}
        {year && (
          <h2 class="horz-timeline__title">
            {year} at a glance
          </h2>
        )}
        {subheading && (
          <p class="horz-timeline__subtitle">
            {subheading}
          </p>
        )}
      </header>
    )}

    {safeItems.length > 0 && (
      <>
        <div class="horz-timeline__track-wrap">
          <div class="horz-timeline__track">
            {phaseBands.length > 0 && (
              <div class="horz-timeline__phases">
                {phaseBands.map((phase) => (
                  <button
                    type="button"
                    class="horz-timeline__phase-band"
                    style={`grid-column: ${phase.startCol} / ${phase.endCol};`}
                    data-target-id={phase.anchorId}
                  >
                    <span class="horz-timeline__phase-label">
                      {phase.label}
                    </span>
                    {phase.subtitle && (
                      <span class="horz-timeline__phase-subtitle">
                        {phase.subtitle}
                      </span>
                    )}
                  </button>
                ))}
              </div>
            )}

            {safeItems.map((item, index) => {
              const isActive = index === 0;
              return (
                <button
                  type="button"
                  class={`horz-timeline__point ${
                    isActive ? 'horz-timeline__point--active' : ''
                  }`}
                  data-id={item._id}
                  aria-pressed={isActive}
                >
                  <span class="horz-timeline__point-dot" aria-hidden="true" />
                  <span class="horz-timeline__point-label">
                    {item.label}
                  </span>
                </button>
              );
            })}
          </div>
        </div>

        <div class="horz-timeline__panels">
          {safeItems.map((item, index) => {
            const isActive = index === 0;
            return (
              <article
                id={`horz-panel-${item._id}`}
                class={`horz-timeline__panel ${
                  isActive ? 'horz-timeline__panel--active' : ''
                }`}
              >
                <p class="horz-timeline__panel-month">
                  {item.label}
                  {year && ` ${year}`}
                </p>

                {item.title && (
                  <h3 class="horz-timeline__panel-title">
                    {item.title}
                  </h3>
                )}

                {(item.tag || item.phase) && (
                  <p class="horz-timeline__panel-phase">
                    {item.tag && (
                      <span class="horz-timeline__panel-tag">
                        {item.tag}
                      </span>
                    )}
                    {item.phase && (
                      <span class="horz-timeline__panel-phase-text">
                        {item.phase}
                      </span>
                    )}
                  </p>
                )}

                {item.description && (
                  <p class="horz-timeline__panel-description">
                    {item.description}
                  </p>
                )}

                {item.bullets && item.bullets.length > 0 && (
                  <ul class="horz-timeline__panel-list">
                    {item.bullets.map((b) => <li>{b}</li>)}
                  </ul>
                )}
              </article>
            );
          })}
        </div>
      </>
    )}
  </div>

  <script is:inline>
    const timelines = document.querySelectorAll('.horz-timeline');

    timelines.forEach((root) => {
      const points = root.querySelectorAll('.horz-timeline__point');
      const panels = root.querySelectorAll('.horz-timeline__panel');
      const phaseBands = root.querySelectorAll('.horz-timeline__phase-band');

      const activateById = (id) => {
        if (!id) return;

        points.forEach((b) => {
          const isActive = b.dataset.id === id;
          b.classList.toggle('horz-timeline__point--active', isActive);
          b.setAttribute('aria-pressed', String(isActive));
        });

        panels.forEach((panel) => {
          panel.classList.toggle(
            'horz-timeline__panel--active',
            panel.id === `horz-panel-${id}`,
          );
        });
      };

      points.forEach((btn) => {
        btn.addEventListener('click', () => {
          activateById(btn.dataset.id);
        });
      });

      phaseBands.forEach((band) => {
        band.addEventListener('click', () => {
          activateById(band.dataset.targetId);
        });
      });
    });
  </script>

  <style>
    .horz-timeline {
      width: 100%;
      padding: 0 1.25rem 3.5rem;
      box-sizing: border-box;
    }

    .horz-timeline__inner {
      max-width: 1380px;
      margin: 0 auto;
    }

    .horz-timeline__header {
      text-align: center;
      margin-top: 0.75rem;
      margin-bottom: 1.75rem;
    }

    .horz-timeline__eyebrow {
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.16em;
      color: rgb(var(--gray));
      margin: 0 0 0.35rem;
    }

    .horz-timeline__title {
      margin: 0 0 0.6rem;
      font-size: clamp(2.1rem, 2vw + 1.8rem, 2.6rem);
    }

    .horz-timeline__subtitle {
      margin: 0;
      font-size: 0.98rem;
      color: rgb(var(--gray));
      max-width: 640px;
      margin-inline: auto;
    }

    /* TRACK */

    .horz-timeline__track-wrap {
      margin-top: 2.3rem; /* slightly more room for phase bands */
      margin-bottom: 1.5rem;
      padding: 0.2rem 0 0.7rem;
      overflow-x: auto;
    }

    .horz-timeline__track {
      position: relative;
      display: grid;
      grid-template-columns: repeat(12, minmax(0, 1fr));
      gap: 0.4rem;
      align-items: flex-start;
      padding-inline: 0.25rem;
      min-height: 60px;
    }

    .horz-timeline__track::before {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      top: 26px;
      height: 2px;
      background: linear-gradient(
        90deg,
        rgba(35, 55, 255, 0.2),
        rgba(35, 55, 255, 0.55),
        rgba(35, 55, 255, 0.2)
      );
      pointer-events: none;
    }

    /* PHASE BANDS */

    .horz-timeline__phases {
      position: absolute;
      left: 0;
      right: 0;
      top: -32px;
      display: grid;
      grid-template-columns: repeat(12, minmax(0, 1fr));
      gap: 0.4rem;
      pointer-events: none;
    }

    .horz-timeline__phase-band {
      pointer-events: auto;
      border: none;
      cursor: pointer;
      border-radius: 999px;
      padding: 0.22rem 0.6rem;
      background: rgba(255, 255, 255, 0.9);
      box-shadow:
        0 8px 18px rgba(0, 0, 0, 0.12),
        0 0 0 1px rgba(35, 55, 255, 0.14);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      min-height: 26px;
      transition:
        transform 0.16s ease,
        box-shadow 0.16s ease,
        background 0.16s ease;
    }

    .horz-timeline__phase-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      color: var(--accent-dark);
    }

    .horz-timeline__phase-subtitle {
      margin-top: 0.05rem;
      font-size: 0.7rem;
      opacity: 0.8;
    }

    .horz-timeline__phase-band:hover,
    .horz-timeline__phase-band:focus-visible {
      transform: translateY(-1px);
      box-shadow:
        0 10px 24px rgba(35, 55, 255, 0.35),
        0 0 0 1px rgba(35, 55, 255, 0.45);
    }

    /* POINTS */

    .horz-timeline__point {
      position: relative;
      display: inline-flex;
      flex-direction: column;
      align-items: center;
      gap: 0.4rem;
      padding: 0;
      border: none;
      background: none;
      cursor: pointer;
      color: inherit;
      font: inherit;
    }

    .horz-timeline__point-dot {
      width: 18px;
      height: 18px;
      border-radius: 999px;
      border: 2px solid rgba(0, 0, 0, 0.18);
      background: #f5f6fb;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.12);
      transition:
        background 0.18s ease,
        border-color 0.18s ease,
        transform 0.18s ease,
        box-shadow 0.18s ease;
    }

    .horz-timeline__point-label {
      font-size: 0.75rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgb(var(--gray-dark));
      opacity: 0.85;
      transition: color 0.18s ease, opacity 0.18s ease;
    }

    .horz-timeline__point:hover .horz-timeline__point-dot,
    .horz-timeline__point:focus-visible .horz-timeline__point-dot {
      transform: translateY(-2px);
      border-color: var(--accent);
      box-shadow: 0 4px 12px rgba(35, 55, 255, 0.3);
    }

    .horz-timeline__point:hover .horz-timeline__point-label,
    .horz-timeline__point:focus-visible .horz-timeline__point-label {
      color: var(--accent-dark);
      opacity: 1;
    }

    .horz-timeline__point--active .horz-timeline__point-dot {
      background: radial-gradient(circle at 30% 0%, #ffffff, var(--accent));
      border-color: var(--accent-dark);
      box-shadow:
        0 0 0 3px rgba(35, 55, 255, 0.12),
        0 10px 24px rgba(35, 55, 255, 0.4);
      transform: translateY(-3px) scale(1.04);
    }

    .horz-timeline__point--active .horz-timeline__point-label {
      color: var(--accent-dark);
      opacity: 1;
      font-weight: 700;
    }

    /* PANELS */

    .horz-timeline__panels {
      margin-top: 0.75rem;
    }

    .horz-timeline__panel {
      display: none;
      max-width: 1320px;
      margin-inline: auto;
      padding: 1.8rem 2.1rem 1.9rem;
      border-radius: 22px;
      background: rgba(255, 255, 255, 0.78);
      box-shadow:
        0 18px 45px rgba(0, 0, 0, 0.13),
        0 0 0 1px rgba(0, 0, 0, 0.03);
      backdrop-filter: blur(18px);
      font-size: 0.97rem;
      line-height: 1.55;
      animation: horz-panel-in 0.18s ease-out;
    }

    .horz-timeline__panel--active {
      display: block;
    }

    .horz-timeline__panel-month {
      margin: 0 0 0.4rem;
      font-size: 0.82rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgb(var(--gray));
    }

    .horz-timeline__panel-title {
      margin: 0 0 0.35rem;
      font-size: 1.25rem;
    }

    .horz-timeline__panel-phase {
      margin: 0 0 0.9rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
      align-items: center;
      font-size: 0.96rem;
      color: rgb(var(--gray-dark));
    }

    .horz-timeline__panel-tag {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      padding: 0.18rem 0.55rem;
      border-radius: 999px;
      border: 1px solid rgba(35, 55, 255, 0.25);
      background: rgba(35, 55, 255, 0.06);
      color: var(--accent-dark);
    }

    .horz-timeline__panel-phase-text {
      opacity: 0.9;
    }

    .horz-timeline__panel-description {
      margin: 0 0 0.9rem;
    }

    .horz-timeline__panel-list {
      margin: 0;
      padding-left: 1.2rem;
      font-size: 0.95rem;
    }

    .horz-timeline__panel-list li + li {
      margin-top: 0.25rem;
    }

    @keyframes horz-panel-in {
      from {
        opacity: 0;
        transform: translateY(6px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 900px) {
      .horz-timeline {
        padding-inline: clamp(14px, 4vw, 22px);
      }

      .horz-timeline__header {
        margin-bottom: 1.4rem;
      }

      .horz-timeline__track-wrap {
        margin-top: 2rem;
        margin-bottom: 1.1rem;
      }

      .horz-timeline__point-dot {
        width: 16px;
        height: 16px;
      }

      .horz-timeline__point-label {
        font-size: 0.7rem;
        letter-spacing: 0.14em;
      }

      .horz-timeline__phase-label,
      .horz-timeline__phase-subtitle {
        font-size: 0.68rem;
      }

      .horz-timeline__panel {
        padding: 1.4rem 1.4rem 1.6rem;
        border-radius: 18px;
      }
    }
  </style>
</section>
