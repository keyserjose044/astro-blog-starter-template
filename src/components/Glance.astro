---
interface Item { href: string; src: string; label: string }
interface Props { items: Item[] }
const { items = [] } = Astro.props;
---
<section class="glance">
  {items.map((it) => (
    <a href={it.href} class="card">
      <img src={it.src} alt={it.label} loading="lazy" />
      <span>{it.label}</span>
    </a>
  ))}
</section>

<style>
  .glance {
    display: grid;
    grid-template-columns: repeat(7, minmax(0, 1fr));
    gap: .75rem;
    margin: 1rem 0 2rem;
  }
  @media (max-width: 1400px) { .glance { grid-template-columns: repeat(5, 1fr); } }
  @media (max-width: 1000px) { .glance { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 640px)  { .glance { grid-template-columns: repeat(2, 1fr); } }

  .card {
    display: grid;
    grid-template-rows: auto 42px;
    align-items: center;
    text-decoration: none;
    background: #fafafa;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 4px 14px rgba(0,0,0,.06);
    transition: transform .12s ease, box-shadow .12s ease, background .12s ease;
  }
  .card:hover { transform: translateY(-2px); box-shadow: 0 10px 28px rgba(0,0,0,.08); background: #fff; }
  .card img { width: 100%; height: 140px; object-fit: cover; display: block; }
  .card span { display: block; text-align: center; padding: .5rem .6rem; color: inherit; font-weight: 600; }
</style>
