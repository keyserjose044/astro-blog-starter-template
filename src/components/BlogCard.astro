---
// src/components/BlogCard.astro
export interface Props {
  href: string;
  title: string;
  pubDate?: Date | null;
  heroImage?: string;
  heroVideo?: string;
}

const { href, title, pubDate, heroImage, heroVideo } = Astro.props;

const formattedDate =
  pubDate &&
  pubDate.toLocaleDateString(undefined, {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
---

<li class="blog-card">
  <a href={href} aria-label={title}>
    {heroImage ? (
      <img src={heroImage} alt="" loading="lazy" />
    ) : heroVideo ? (
      <video autoplay muted loop playsinline preload="auto">
        <source src={heroVideo} type="video/mp4" />
      </video>
    ) : null}

    <h3>{title}</h3>

    {pubDate ? (
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    ) : (
      <time aria-hidden="true">Undated</time>
    )}
  </a>
</li>

<style>
  .blog-card {
    list-style: none;
  }

  /* Base card */
  .blog-card a {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);

    transform: translateY(0) scale(1);
    transition:
      transform 0.2s ease-out,
      box-shadow 0.2s ease-out,
      filter 0.2s ease-out;
    will-change: transform, box-shadow;
  }

  .blog-card img,
  .blog-card video {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  .blog-card h3 {
    margin: 0.75rem 1rem 0.25rem;
    font-size: 1.25rem;
  }

  .blog-card time {
    display: block;
    margin: 0 1rem 1rem;
    opacity: 0.7;
  }

  /* Hero-style gleam across the card */
  .blog-card a::before {
    content: "";
    position: absolute;
    top: 0;
    left: -150%;
    width: 70%;
    height: 100%;
    pointer-events: none;
    background: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.95) 35%,
      rgba(255, 255, 255, 0.6) 55%,
      rgba(255, 255, 255, 0) 100%
    );
    opacity: 0;
    transform: skewX(-20deg);
  }

  /* Blue perimeter glow (simple + cross-browser) */
  .blog-card a::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 16px;
    pointer-events: none;
    box-shadow: 0 0 0 0 rgba(56, 189, 248, 0);
    opacity: 0;
    transition:
      opacity 0.2s ease-out,
      box-shadow 0.2s ease-out;
  }

  /* POP like the LL title, but on the whole card */
  .blog-card a:hover,
  .blog-card a:focus-visible {
    transform: translateY(-6px) scale(1.05);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
    filter: brightness(1.02);
    outline: none;
  }

  /* Trigger gleam + border glow */
  .blog-card a:hover::before,
  .blog-card a:focus-visible::before {
    animation: card-gleam 0.7s ease-out;
  }

  .blog-card a:hover::after,
  .blog-card a:focus-visible::after {
    opacity: 1;
    box-shadow:
      0 0 0 2px rgba(56, 189, 248, 0.95),
      0 0 18px 6px rgba(59, 130, 246, 0.9);
  }

  /* Keyboard focus ring stacked with glow */
  .blog-card a:focus-visible {
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.9),
      0 0 0 4px rgba(94, 234, 212, 0.9),
      0 18px 40px rgba(0, 0, 0, 0.25);
  }

  @keyframes card-gleam {
    0% {
      left: -150%;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    60% {
      opacity: 0.9;
    }
    100% {
      left: 150%;
      opacity: 0;
    }
  }

  /* Optional: if you *really* want to respect reduced motion,
     just tone down the pop but don't kill it entirely */
  @media (prefers-reduced-motion: reduce) {
    .blog-card a {
      transition: transform 0.15s ease-out, box-shadow 0.15s ease-out;
    }
    .blog-card a:hover,
    .blog-card a:focus-visible {
      transform: translateY(-3px) scale(1.02);
    }
    .blog-card a:hover::before,
    .blog-card a:focus-visible::before {
      animation: none;
      opacity: 0;
    }
  }
</style>

