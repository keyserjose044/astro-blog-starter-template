---
export interface Props {
  href: string;
  title: string;
  pubDate?: Date | null;
  heroImage?: string;
  heroVideo?: string;
}

// ⬅️ Capture all extra props (including data-title)
const { href, title, pubDate, heroImage, heroVideo, ...rest } = Astro.props;

const formattedDate =
  pubDate &&
  pubDate.toLocaleDateString(undefined, {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
---

<!-- ⬅️ Spread {...rest} to ensure data-title gets applied -->
<li class="blog-card" {...rest}>
  <a href={href} aria-label={title}>
    {heroImage ? (
      <img src={heroImage} alt="" loading="lazy" />
    ) : heroVideo ? (
      <video autoplay muted loop playsinline preload="auto">
        <source src={heroVideo} type="video/mp4" />
      </video>
    ) : null}

    <h3>{title}</h3>

    {pubDate ? (
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    ) : (
      <time aria-hidden="true">Undated</time>
    )}
  </a>
</li>

<style>
  .blog-card {
    list-style: none;
  }

  /* Base card */
  .blog-card a {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);

    transform: translateY(0) scale(1);
    transition:
      transform 0.2s ease-out,
      box-shadow 0.2s ease-out,
      filter 0.2s ease-out;
    will-change: transform, box-shadow;
  }

  .blog-card img,
  .blog-card video {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  .blog-card h3 {
    margin: 0.75rem 1rem 0.25rem;
    font-size: 1.25rem;
  }

  .blog-card time {
    display: block;
    margin: 0 1rem 1rem;
    opacity: 0.7;
  }

  /* === HERO-STYLE GLEAM ACROSS THE WHOLE CARD === */
  .blog-card a::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 70%;
    height: 100%;
    pointer-events: none;
    background: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.95) 35%,
      rgba(255, 255, 255, 0.6) 55%,
      rgba(255, 255, 255, 0) 100%
    );
    opacity: 0;
    transform: translateX(-150%) skewX(-20deg);
    transition:
      transform 0.7s ease-out,
      opacity 0.2s ease-out;
  }

  /* === BLUE PERIMETER RING (CLOCKWISE SWEEP) === */
  .blog-card a::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 16px;
    pointer-events: none;

    padding: 2px;
    background: linear-gradient(
      120deg,
      rgba(56, 189, 248, 0) 0%,
      rgba(56, 189, 248, 1) 20%,
      rgba(37, 99, 235, 1) 50%,
      rgba(56, 189, 248, 1) 80%,
      rgba(56, 189, 248, 0) 100%
    );
    background-size: 250% 250%;
    background-position: 0% 50%;
    opacity: 0;

    transition:
      opacity 0.2s ease-out,
      background-position 0.6s ease-out;

    -webkit-mask:
      linear-gradient(#000 0 0) content-box,
      linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  /* === POP + SHADOW ON HOVER/FOCUS === */
  .blog-card a:hover,
  .blog-card a:focus-visible {
    transform: translateY(-6px) scale(1.05);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
    filter: brightness(1.02);
    outline: none;
  }

  /* Trigger gleam */
  .blog-card a:hover::before,
  .blog-card a:focus-visible::before {
    opacity: 1;
    transform: translateX(150%) skewX(-20deg);
  }

  /* Trigger border ring */
  .blog-card a:hover::after,
  .blog-card a:focus-visible::after {
    opacity: 1;
    background-position: 200% 50%;
  }

  /* Keyboard focus ring */
  .blog-card a:focus-visible {
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.9),
      0 0 0 4px rgba(94, 234, 212, 0.9),
      0 18px 40px rgba(0, 0, 0, 0.25);
  }

  /* Desktop only: full effects */
  @media (hover: hover) and (pointer: fine) {
    .blog-card a:hover,
    .blog-card a:focus-visible {
      transform: translateY(-6px) scale(1.05);
      box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
      filter: brightness(1.02);
    }

    .blog-card a:hover::before,
    .blog-card a:focus-visible::before {
      opacity: 1;
      transform: translateX(150%) skewX(-20deg);
    }

    .blog-card a:hover::after,
    .blog-card a:focus-visible::after {
      animation: border-pulse 0.6s ease-out;
    }
  }

  /* Mobile: simplified (no gleam/ring) */
  @media (hover: none) and (pointer: coarse) {
    .blog-card a {
      transition: box-shadow 0.15s ease-out;
    }

    .blog-card a:active {
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.25);
    }
  }

  @keyframes border-pulse {
    0% {
      opacity: 0;
      background-position: 0% 50%;
    }
    15% {
      opacity: 1;
    }
    80% {
      opacity: 1;
      background-position: 200% 50%;
    }
    100% {
      opacity: 0;
    }
  }
</style>
