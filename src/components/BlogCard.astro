---
// src/components/BlogCard.astro
export interface Props {
  href: string;
  title: string;
  pubDate?: Date | null;
  heroImage?: string;
  heroVideo?: string;
}

const { href, title, pubDate, heroImage, heroVideo } = Astro.props;

const formattedDate =
  pubDate &&
  pubDate.toLocaleDateString(undefined, {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
---

<li class="blog-card">
  <a href={href} aria-label={title}>
    {heroImage ? (
      <img src={heroImage} alt="" loading="lazy" />
    ) : heroVideo ? (
      <video autoplay muted loop playsinline preload="auto">
        <source src={heroVideo} type="video/mp4" />
      </video>
    ) : null}

    <h3>{title}</h3>

    {pubDate ? (
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    ) : (
      <time aria-hidden="true">Undated</time>
    )}
  </a>
</li>

<style>
  .blog-card {
    list-style: none;
  }

  /* Base card */
  .blog-card a {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);

    transform: translateY(0) scale(1);
    transition:
      transform 0.2s ease-out,
      box-shadow 0.2s ease-out,
      filter 0.2s ease-out;
    will-change: transform, box-shadow;
  }

  .blog-card img,
  .blog-card video {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  .blog-card h3 {
    margin: 0.75rem 1rem 0.25rem;
    font-size: 1.25rem;
  }

  .blog-card time {
    display: block;
    margin: 0 1rem 1rem;
    opacity: 0.7;
  }

  /* Inner gleam (like LL title) */
  .blog-card a::before {
    content: "";
    position: absolute;
    top: 0;
    left: -150%;
    width: 70%;
    height: 100%;
    pointer-events: none;
    background: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.95) 35%,
      rgba(255, 255, 255, 0.6) 55%,
      rgba(255, 255, 255, 0) 100%
    );
    opacity: 0;
    transform: skewX(-20deg);
  }

  /* Blue perimeter surge */
  .blog-card a::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 16px;
    pointer-events: none;
    /* “border-only” via mask */
    padding: 2px;
    background: linear-gradient(
      120deg,
      rgba(56, 189, 248, 0) 0%,
      rgba(56, 189, 248, 1) 25%,
      rgba(37, 99, 235, 1) 50%,
      rgba(56, 189, 248, 1) 75%,
      rgba(56, 189, 248, 0) 100%
    );
    background-size: 250% 250%;
    opacity: 0;
    -webkit-mask:
      linear-gradient(#000 0 0) content-box,
      linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  /* Pop like hero title + stronger shadow */
  .blog-card a:hover,
  .blog-card a:focus-visible {
    transform: translateY(-6px) scale(1.04);
    box-shadow: 0 14px 32px rgba(0, 0, 0, 0.25);
    filter: brightness(1.02);
    outline: none;
  }

  /* Trigger gleam + perimeter surge */
  .blog-card a:hover::before,
  .blog-card a:focus-visible::before {
    animation: card-gleam 0.7s ease-out;
  }

  .blog-card a:hover::after,
  .blog-card a:focus-visible::after {
    animation: border-surge 0.6s ease-out;
  }

  /* Keyboard focus ring on top of the glow */
  .blog-card a:focus-visible {
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.9),
      0 0 0 4px rgba(94, 234, 212, 0.9),
      0 18px 40px rgba(0, 0, 0, 0.25);
  }

  @keyframes card-gleam {
    0% {
      left: -150%;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    60% {
      opacity: 0.9;
    }
    100% {
      left: 150%;
      opacity: 0;
    }
  }

  @keyframes border-surge {
    0% {
      opacity: 0;
      background-position: 0% 50%;
    }
    20% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      background-position: 200% 50%;
    }
  }

  /* Reduced motion: keep pop subtle, no sweeps */
  @media (prefers-reduced-motion: reduce) {
    .blog-card a {
      transition: box-shadow 0.15s ease-out;
      transform: none;
    }

    .blog-card a:hover,
    .blog-card a:focus-visible {
      transform: none;
      filter: none;
    }

    .blog-card a::before,
    .blog-card a::after {
      animation: none !important;
      opacity: 0;
    }
  }
</style>
