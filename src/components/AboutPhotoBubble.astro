---
export interface Props {
  src: string;
  alt?: string;
  bubbleText?: string;

  // Optional positioning overrides (percentages)
  hotspotBottom?: string;
  hotspotLeft?: string;
  hotspotWidth?: string;
  hotspotHeight?: string;

  bubbleBottom?: string;
  bubbleLeft?: string;
}

const {
  src,
  alt = '',
  bubbleText = "One day I'll turn all of this into graphs.",

  // Defaults tuned for the little Jos√© image
  hotspotBottom = '16%',
  hotspotLeft = '26%',
  hotspotWidth = '20%',
  hotspotHeight = '35%',

  bubbleBottom = '45%',
  bubbleLeft = '50%',
} = Astro.props;
---

<section class="about-photo-block">
  <div class="about-photo-wrapper">
    <img
      src={src}
      alt={alt}
      class="about-photo-img"
      loading="lazy"
    />

    <!-- Invisible hotspot over little Jos√© -->
    <button
      class="bubble-hotspot"
      type="button"
      aria-label="What is little Jos√© thinking?"
      style={`bottom:${hotspotBottom};left:${hotspotLeft};width:${hotspotWidth};height:${hotspotHeight};`}
    ></button>

    <!-- Hover/focus speech bubble -->
    <div
      class="speech-bubble"
      style={`bottom:${bubbleBottom};left:${bubbleLeft};`}
    >
      <p>{bubbleText}</p>
    </div>

    <!-- üïµÔ∏è Secret double-click message -->
    <div class="secret-bubble" data-visible="0"></div>
  </div>
</section>

<style>
  .about-photo-block {
    display: flex;
    justify-content: center;
  }

  .about-photo-wrapper {
    position: relative;
    display: inline-block;
    max-width: 100%;
  }

  .about-photo-img {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .bubble-hotspot {
    position: absolute;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .bubble-hotspot:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.7);
    outline-offset: 4px;
  }

  /* ‚¨áÔ∏è Nicer bubble styling */
  .speech-bubble {
    position: absolute;
    transform: translate(-50%, 8%) scale(0.95);
    max-width: 220px;

    background: rgba(253, 251, 247, 0.96); /* soft off-white */
    color: #111;
    padding: 0.85rem 1.2rem;
    border-radius: 1.75rem;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);

    font-size: 0.86rem;
    line-height: 1.4;
    text-align: center;

    opacity: 0;
    pointer-events: none;
    transition:
      opacity 0.22s ease-out,
      transform 0.22s ease-out;
  }

  .speech-bubble::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 22%;
    border-width: 10px 10px 0 10px;
    border-style: solid;
    border-color: rgba(253, 251, 247, 0.96) transparent transparent transparent;
    filter: drop-shadow(0 2px 2px rgba(0, 0, 0, 0.25));
  }

  /* Show bubble when hotspot is hovered or focused */
  .bubble-hotspot:is(:hover, :focus-visible) + .speech-bubble {
    opacity: 1;
    transform: translate(-50%, 0%) scale(1);
  }

  /* üïµÔ∏è Secret double-click bubble */
  .secret-bubble {
    position: absolute;
    left: 50%;
    top: 18%;
    transform: translate(-50%, -50%);
    background: rgba(255, 255, 255, 0.95);
    color: #111827;
    padding: 0.5rem 0.9rem;
    border-radius: 999px;
    font-size: 0.9rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.18s ease;
  }

  .secret-bubble[data-visible="1"] {
    opacity: 1;
  }

  /* Slightly smaller on narrow screens */
  @media (max-width: 640px) {
    .speech-bubble {
      max-width: 190px;
      font-size: 0.8rem;
      padding: 0.7rem 1rem;
    }
    .secret-bubble {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>

<script is:inline>
  (function () {
    if (typeof document === 'undefined') return;

    document.querySelectorAll('.about-photo-wrapper').forEach((wrapper) => {
      const secret = wrapper.querySelector('.secret-bubble');
      if (!secret) return;

      const messages = [
        'Even then, I was building systems.',
        'Future LifeLogger in the making.',
        'Everything starts with a blank page.',
        'Tiny Jos√©, huge plans.',
        'Drafting v0.1 of my life-OS.'
      ];

      const today = new Date();
      const idx = today.getDate() % messages.length;
      secret.textContent = messages[idx];

      wrapper.addEventListener('dblclick', () => {
        const visible = secret.getAttribute('data-visible') === '1';
        secret.setAttribute('data-visible', visible ? '0' : '1');
      });
    });
  })();
</script>
