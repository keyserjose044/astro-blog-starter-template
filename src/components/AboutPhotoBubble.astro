---
export interface Props {
  src: string;
  alt?: string;
  bubbleText?: string;

  // Optional positioning overrides (percentages)
  hotspotBottom?: string;
  hotspotLeft?: string;
  hotspotWidth?: string;
  hotspotHeight?: string;

  bubbleBottom?: string;
  bubbleLeft?: string;
}

const {
  src,
  alt = '',
  bubbleText = "One day I'll turn all of this into graphs.",

  // Defaults tuned for the little José image
  hotspotBottom = '16%',
  hotspotLeft = '26%',
  hotspotWidth = '20%',
  hotspotHeight = '35%',

  bubbleBottom = '45%',
  bubbleLeft = '50%',
} = Astro.props;
---

<section class="about-photo-block">
  <div class="about-photo-wrapper">
    <img
      src={src}
      alt={alt}
      class="about-photo-img"
      loading="lazy"
    />

    <!-- Invisible hotspot over little José -->
    <button
      class="bubble-hotspot"
      type="button"
      aria-label="What is little José thinking?"
      style={`bottom:${hotspotBottom};left:${hotspotLeft};width:${hotspotWidth};height:${hotspotHeight};`}
    ></button>

    <!-- Speech bubble -->
    <div
      class="speech-bubble"
      style={`bottom:${bubbleBottom};left:${bubbleLeft};`}
    >
      <p>{bubbleText}</p>
    </div>
  </div>
</section>

<style>
  .about-photo-block {
    display: flex;
    justify-content: center;
  }

  .about-photo-wrapper {
    position: relative;
    display: inline-block;
    max-width: 100%;
  }

  .about-photo-img {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .bubble-hotspot {
    position: absolute;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .bubble-hotspot:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.7);
    outline-offset: 4px;
  }

  .speech-bubble {
    position: absolute;
    transform: translate(-50%, 10%) scale(0.95);
    max-width: 220px;

    background: rgba(255, 255, 255, 0.95);
    color: #111;
    padding: 0.75rem 1rem;
    border-radius: 1.5rem;
    box-shadow: 0 8px 18px rgba(0, 0, 0, 0.25);
    font-size: 0.85rem;
    line-height: 1.3;

    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease, transform 0.25s ease;
  }

  .speech-bubble::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 15%;
    border-width: 10px 10px 0 10px;
    border-style: solid;
    border-color: rgba(255, 255, 255, 0.95) transparent transparent transparent;
  }

  /* Show bubble when hotspot is hovered or focused */
  .bubble-hotspot:is(:hover, :focus-visible) + .speech-bubble {
    opacity: 1;
    transform: translate(-50%, 0%) scale(1);
  }
</style>
