---
const today = new Date();
---

<footer>
  <div class="footer-links">
    <p>
      Contact:
      <a class="footer-email" href="mailto:lifeloggerz.official@gmail.com">
        lifeloggerz.official@gmail.com
      </a>
    </p>
    <p class="footer-easter">Track your life. Master your time.</p>
  </div>

  <p class="copyright">
    &copy; {today.getFullYear()} LifeLoggerz. All rights reserved.
  </p>
</footer>

<style>
  footer {
    padding: 2em 1em 6em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
    transition: opacity 0.3s ease;
  }

  footer:hover {
    opacity: 0.95;
  }

  /* Hidden easter egg quote */
  .footer-easter {
    font-size: 0.8em;
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .footer-links:hover .footer-easter {
    opacity: 1;
  }

  .copyright {
    font-size: 0.9em;
    opacity: 0.8;
  }

  /* Premium micro-interactions just for footer links */
  footer .footer-links a {
    position: relative;
    display: inline-block;
    color: rgb(var(--gray));
    text-decoration: none;
    font-weight: 500;
    transition: transform 0.2s ease, color 0.2s ease;
  }

  /* Underline animation */
  footer .footer-links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0%;
    height: 1px;
    background: rgba(var(--gray), 0.6);
    transition: width 0.2s ease 0.1s;
  }

  /* Hover state for all footer links */
  footer .footer-links a:hover {
    transform: translateX(2px);
    color: rgb(var(--gray-dark));
  }

  footer .footer-links a:hover::after {
    width: 100%;
  }

  /* Only bold the email link on hover */
  footer .footer-links a.footer-email:hover {
    font-weight: 600; /* or 700 */
  }

  /* Smooth font-weight transition only for the email link */
  footer .footer-links a.footer-email {
    transition: transform 0.2s ease,
                color 0.2s ease,
                font-weight 0.15s ease;
  }
</style>
