---
export interface TimelineItem {
  id?: string;
  label: string;
  title?: string;
  tag?: string;
  phase?: string;
  description?: string;
  bullets?: string[];
}

export interface Phase {
  label: string;
  startId: string; // e.g. "jan"
  endId: string;   // e.g. "apr"
  subtitle?: string;
}

export interface Props {
  year?: number | string;
  heading?: string;
  subheading?: string;
  items: TimelineItem[];
  phases?: Phase[];
}

const {
  year,
  heading = '',
  subheading = '',
  items = [],
  phases = [],
} = Astro.props as Props;

const safeItems = items.map((item, index) => ({
  ...item,
  _id: item.id ?? item.label?.toLowerCase() ?? `item-${index}`,
}));

const normalize = (v?: string | null) =>
  (v ?? '').toString().toLowerCase().trim();

// Tag items with phase variant indices, matching HorzTimeline
phases.forEach((phase, phaseIndex) => {
  const startKey = normalize(phase.startId);
  const endKey = normalize(phase.endId);

  const startIndex = safeItems.findIndex((i) =>
    [normalize(i._id), normalize(i.id), normalize(i.label)].includes(startKey),
  );
  const endIndex = safeItems.findIndex((i) =>
    [normalize(i._id), normalize(i.id), normalize(i.label)].includes(endKey),
  );

  if (startIndex === -1 || endIndex === -1 || endIndex < startIndex) return;

  for (let i = startIndex; i <= endIndex; i += 1) {
    // eslint-disable-next-line no-param-reassign
    (safeItems[i] as any)._phaseVariant = phaseIndex;
  }
});
---

<section class="vert-timeline">
  <div class="vert-timeline__inner">
    {(heading || year || subheading) && (
      <header class="vert-timeline__header">
        {heading && (
          <p class="vert-timeline__eyebrow">{heading}</p>
        )}
        {year && (
          <h2 class="vert-timeline__title">{year} at a glance</h2>
        )}
        {subheading && (
          <p class="vert-timeline__subtitle">{subheading}</p>
        )}
      </header>
    )}

    {safeItems.length > 0 && (
      <ol class="vert-timeline__list">
        {safeItems.map((item) => {
          const phaseVariant =
            typeof (item as any)._phaseVariant === 'number'
              ? (item as any)._phaseVariant
              : 'default';

          return (
            <li
              class={`vert-timeline__item vert-item--phase-${phaseVariant}`}
            >
              <div class="vert-timeline__dot" aria-hidden="true" />
              <article class="vert-timeline__content">
                <p class="vert-timeline__month">
                  {item.label} {year}
                </p>

                {item.title && (
                  <h3 class="vert-timeline__title-item">{item.title}</h3>
                )}

                {(item.tag || item.phase) && (
                  <p class="vert-timeline__meta">
                    {item.tag && (
                      <span
                        class={`vert-timeline__tag phase-tag--${phaseVariant}`}
                      >
                        {item.tag}
                      </span>
                    )}
                    {item.phase && (
                      <span class="vert-timeline__phase">{item.phase}</span>
                    )}
                  </p>
                )}

                {item.description && (
                  <p class="vert-timeline__description">
                    {item.description}
                  </p>
                )}

                {item.bullets && item.bullets.length > 0 && (
                  <ul class="vert-timeline__bullets">
                    {item.bullets.map((b) => <li>{b}</li>)}
                  </ul>
                )}
              </article>
            </li>
          );
        })}
      </ol>
    )}
  </div>

  <style>
    .vert-timeline {
      width: 100%;
      padding: 0 1.1rem 2.25rem;
      box-sizing: border-box;
    }

    .vert-timeline__inner {
      max-width: 720px;
      margin: 0 auto;
    }

    .vert-timeline__header {
      text-align: center;
      margin-top: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .vert-timeline__eyebrow {
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.16em;
      color: rgb(var(--gray));
      margin: 0 0 0.3rem;
    }

    .vert-timeline__title {
      margin: 0 0 0.55rem;
      font-size: clamp(2rem, 2vw + 1.6rem, 2.3rem);
    }

    .vert-timeline__subtitle {
      margin: 0;
      font-size: 0.96rem;
      color: rgb(var(--gray));
      max-width: 640px;
      margin-inline: auto;
    }

    .vert-timeline__list {
      position: relative;
      margin: 1.6rem 0 0;
      padding: 0;
      list-style: none;
    }

    .vert-timeline__list::before {
      content: '';
      position: absolute;
      left: 0.6rem;
      top: 0.4rem;
      bottom: 0.8rem;
      width: 3px;
      border-radius: 999px;
      background: linear-gradient(
        to bottom,
        rgba(35, 55, 255, 0.7),
        rgba(35, 55, 255, 0.85)
      );
    }

    .vert-timeline__item {
      position: relative;
      padding-left: 2.4rem;
      margin-bottom: 1.6rem;
    }

    .vert-timeline__dot {
      position: absolute;
      left: 0.6rem;
      top: 0.7rem;
      transform: translate(-50%, -50%);
      width: 14px;
      height: 14px;
      border-radius: 999px;
      border: 2px solid var(--accent-dark);
      background: #ffffff;
      box-shadow: 0 0 0 3px rgba(35, 55, 255, 0.15);
      transition:
        border-color 0.18s ease,
        box-shadow 0.18s ease;
    }

    .vert-timeline__content {
      padding: 0.1rem 0 0;
      font-size: 0.98rem;
      line-height: 1.55;
    }

    .vert-timeline__month {
      margin: 0 0 0.15rem;
      font-size: 0.8rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgb(var(--gray));
    }

    .vert-timeline__title-item {
      margin: 0 0 0.25rem;
      font-size: 1.15rem;
      font-weight: 600;
    }

    .vert-timeline__meta {
      margin: 0 0 0.7rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.35rem;
      align-items: center;
      font-size: 0.94rem;
      color: rgb(var(--gray-dark));
    }

    .vert-timeline__tag {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      padding: 0.18rem 0.55rem;
      border-radius: 999px;
      border: 1px solid rgba(35, 55, 255, 0.25);
      background: rgba(35, 55, 255, 0.06);
      color: var(--accent-dark);
      transition:
        border-color 0.18s ease,
        background 0.18s ease,
        color 0.18s ease;
    }

    .vert-timeline__phase {
      opacity: 0.9;
    }

    .vert-timeline__description {
      margin: 0 0 0.6rem;
    }

    .vert-timeline__bullets {
      margin: 0;
      padding-left: 1.2rem;
      font-size: 0.94rem;
    }

    .vert-timeline__bullets li + li {
      margin-top: 0.25rem;
    }

    /* Phase-colored tag overrides (match HorzTimeline) */

    /* default fallback (no phase) uses base style */

    .phase-tag--0 {
      border-color: rgba(59, 130, 246, 0.6);
      background: rgba(237, 242, 255, 0.9);
      color: #1d4ed8;
    }

    .phase-tag--1 {
      border-color: rgba(34, 197, 94, 0.6);
      background: rgba(236, 253, 245, 0.9);
      color: #15803d;
    }

    .phase-tag--2 {
      border-color: rgba(245, 158, 11, 0.6);
      background: rgba(255, 251, 235, 0.9);
      color: #b45309;
    }

    .phase-tag--3 {
      border-color: rgba(236, 72, 153, 0.6);
      background: rgba(253, 242, 255, 0.9);
      color: #be185d;
    }

    /* Phase-colored dots */

    .vert-item--phase-0 .vert-timeline__dot {
      border-color: rgba(59, 130, 246, 0.95);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.28);
    }

    .vert-item--phase-1 .vert-timeline__dot {
      border-color: rgba(34, 197, 94, 0.95);
      box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.28);
    }

    .vert-item--phase-2 .vert-timeline__dot {
      border-color: rgba(245, 158, 11, 0.95);
      box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.28);
    }

    .vert-item--phase-3 .vert-timeline__dot {
      border-color: rgba(236, 72, 153, 0.95);
      box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.28);
    }

    /* Tablet / Desktop refinements */
    @media (min-width: 768px) {
      .vert-timeline {
        padding-inline: 1.5rem;
      }

      .vert-timeline__inner {
        max-width: 780px;
      }
    }

    /* MOBILE READABILITY BOOST */
    @media (max-width: 900px) {
      .vert-timeline__content,
      .vert-timeline__description,
      .vert-timeline__bullets li {
        font-weight: 500;
      }

      .vert-timeline__title-item {
        font-weight: 650;
      }
    }
  </style>
</section>
