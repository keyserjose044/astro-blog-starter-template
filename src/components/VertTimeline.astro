---
// src/components/VertTimeline.astro

export interface TimelineItem {
  id?: string;          // e.g. "jan"
  label: string;        // e.g. "JAN"
  title?: string;       // e.g. "GS Expansion"
  tag?: string;         // e.g. "Google Sheets systems"
  phase?: string;
  description?: string;
  bullets?: string[];
}

export interface Props {
  year?: number | string;
  heading?: string;
  subheading?: string;
  items: TimelineItem[];
}

const {
  year,
  heading = '',
  subheading = '',
  items = [],
} = Astro.props as Props;

const safeItems = items.map((item, index) => ({
  ...item,
  _id: item.id ?? `item-${index}`,
}));
---

<section class="vert-timeline">
  <div class="vert-timeline__inner">
    {(heading || year || subheading) && (
      <header class="vert-timeline__header">
        {heading && (
          <p class="vert-timeline__eyebrow">
            {heading}
          </p>
        )}
        {year && (
          <h2 class="vert-timeline__title">
            {year} at a glance
          </h2>
        )}
        {subheading && (
          <p class="vert-timeline__subtitle">
            {subheading}
          </p>
        )}
      </header>
    )}

    {safeItems.length > 0 && (
      <ol class="vert-timeline__list">
        {safeItems.map((item) => (
          <li class="vert-timeline__item">
            <div class="vert-timeline__dot" aria-hidden="true" />

            <article class="vert-timeline__content">
              <p class="vert-timeline__month">
                {item.label}
                {year && ` ${year}`}
              </p>

              {item.title && (
                <h3 class="vert-timeline__title-item">
                  {item.title}
                </h3>
              )}

              {(item.tag || item.phase) && (
                <p class="vert-timeline__meta">
                  {item.tag && (
                    <span class="vert-timeline__tag">
                      {item.tag}
                    </span>
                  )}
                  {item.phase && (
                    <span class="vert-timeline__phase">
                      {item.phase}
                    </span>
                  )}
                </p>
              )}

              {item.description && (
                <p class="vert-timeline__description">
                  {item.description}
                </p>
              )}

              {item.bullets && item.bullets.length > 0 && (
                <ul class="vert-timeline__bullets">
                  {item.bullets.map((b) => <li>{b}</li>)}
                </ul>
              )}
            </article>
          </li>
        ))}
      </ol>
    )}
  </div>

  <style>
    .vert-timeline {
      width: 100%;
      padding: 0 1.1rem 3rem;
      box-sizing: border-box;
    }

    .vert-timeline__inner {
      max-width: 720px;
      margin: 0 auto;
    }

    .vert-timeline__header {
      text-align: center;
      margin-top: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .vert-timeline__eyebrow {
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.16em;
      color: rgb(var(--gray));
      margin: 0 0 0.3rem;
    }

    .vert-timeline__title {
      margin: 0 0 0.55rem;
      font-size: clamp(2rem, 2vw + 1.6rem, 2.3rem);
    }

    .vert-timeline__subtitle {
      margin: 0;
      font-size: 0.96rem;
      color: rgb(var(--gray));
      max-width: 640px;
      margin-inline: auto;
    }

    .vert-timeline__list {
      position: relative;
      margin: 1.2rem 0 0;
      padding: 0;
      list-style: none;
    }

    /* vertical spine */
    .vert-timeline__list::before {
      content: '';
      position: absolute;
      left: 0.55rem;
      top: 0;
      bottom: 0;
      width: 3px;
      border-radius: 999px;
      background: linear-gradient(
        to bottom,
        rgba(35, 55, 255, 0.75),
        rgba(35, 55, 255, 0.8)
      );
    }

    .vert-timeline__item {
      position: relative;
      padding-left: 2.1rem;
      margin-bottom: 1.75rem;
    }

    .vert-timeline__dot {
      position: absolute;
      left: 0.55rem;
      top: 0.7rem;
      transform: translate(-50%, -50%);
      width: 16px;
      height: 16px;
      border-radius: 999px;
      border: 2px solid var(--accent-dark);
      background: #ffffff;
      box-shadow: 0 0 0 3px rgba(35, 55, 255, 0.15);
    }

    .vert-timeline__content {
      /* no glass card â€“ just clean text like CV timeline */
      padding: 0.1rem 0 0;
      font-size: 0.98rem;
      line-height: 1.55;
    }

    .vert-timeline__month {
      margin: 0 0 0.25rem;
      font-size: 0.82rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgb(var(--gray));
    }

    .vert-timeline__title-item {
      margin: 0 0 0.25rem;
      font-size: 1.15rem;
    }

    .vert-timeline__meta {
      margin: 0 0 0.7rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.35rem;
      align-items: center;
      font-size: 0.94rem;
      color: rgb(var(--gray-dark));
    }

    .vert-timeline__tag {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      padding: 0.18rem 0.55rem;
      border-radius: 999px;
      border: 1px solid rgba(35, 55, 255, 0.25);
      background: rgba(35, 55, 255, 0.06);
      color: var(--accent-dark);
    }

    .vert-timeline__phase {
      opacity: 0.9;
    }

    .vert-timeline__description {
      margin: 0 0 0.7rem;
    }

    .vert-timeline__bullets {
      margin: 0;
      padding-left: 1.2rem;
      font-size: 0.95rem;
    }

    .vert-timeline__bullets li + li {
      margin-top: 0.25rem;
    }

    @media (min-width: 768px) {
      .vert-timeline {
        padding-inline: 1.5rem;
      }

      .vert-timeline__inner {
        max-width: 780px;
      }
    }
  </style>
</section>
